<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/back_gray_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_181"
        android:contentDescription="@string/img_gold"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view3" />

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        tools:text="@string/gold_18"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintEnd_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="2/8000/000T"
        android:textColor="@color/gold_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/txtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtLabel"/>

    <View
        android:id="@+id/view4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/back_gray_view"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/view3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_101"
        android:contentDescription="@string/img_tala"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@id/view4"
        app:layout_constraintStart_toStartOf="@id/view4" />
    
    <TextView
        android:id="@+id/txtLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        tools:text="@string/gold24"
        app:layout_constraintBottom_toBottomOf="@id/view4"
        app:layout_constraintEnd_toStartOf="@id/view4"
        app:layout_constraintTop_toTopOf="@id/view4" />
    <TextView
        android:id="@+id/txtPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="2/000/000T"
        android:textColor="@color/gold_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/txtLabel1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtLabel1"/>

    <View
        android:id="@+id/view6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/back_gray_view"
        app:layout_constraintStart_toStartOf="@id/view5"
        app:layout_constraintTop_toBottomOf="@id/view5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_102"
        android:contentDescription="@string/img_tala"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="@id/view6"
        app:layout_constraintStart_toStartOf="@id/view6" />

    <TextView
        android:id="@+id/txtLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        tools:text="طلای دست دوم"
        app:layout_constraintBottom_toBottomOf="@id/view6"
        app:layout_constraintEnd_toStartOf="@id/view6"
        app:layout_constraintTop_toTopOf="@id/view6" />


    <TextView
        android:id="@+id/txtPrice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="2/000/000T"
        android:textColor="@color/gold_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/txtLabel3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtLabel3"/>

    <View
        android:id="@+id/view5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/back_gray_view"
        app:layout_constraintStart_toStartOf="@id/view4"
        app:layout_constraintTop_toBottomOf="@id/view4" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_104"
        android:contentDescription="@string/img_tala"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@id/view5"
        app:layout_constraintStart_toStartOf="@id/view5" />

    <TextView
        android:id="@+id/txtLabel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        tools:text="@string/bahar"
        app:layout_constraintBottom_toBottomOf="@id/view5"
        app:layout_constraintEnd_toStartOf="@id/view5"
        app:layout_constraintTop_toTopOf="@id/view5" />


    <TextView
        android:id="@+id/txtPrice6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="2/000/000T"
        android:textColor="@color/gold_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/txtLabel5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtLabel5"/>

</androidx.constraintlayout.widget.ConstraintLayout>